{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext"],
      "types": ["bun"],
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "../frontend"]
  }